{
    "name": "schmidfelix/ploi-cli",
    "description": "Command line interface for ploi.",
    "keywords": [
        "ploi",
        "ploi-cli",
        "cli"
    ],
    "homepage": "https://felix-schmid.de",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Felix Schmid",
            "email": "hallo@felix-schmid.de"
        },
        {
            "name": "Stan Menten",
            "email": "stanmenten@live.nl"
        }
    ],
    "require": {
        "php": "^8.3",
        "laravel/prompts": "^0.1.21",
        "ploi/ploi-php-sdk": "^1.9"
    },
    "require-dev": {
        "guzzlehttp/guzzle": "^7.8",
        "illuminate/http": "^11.0",
        "laravel-zero/framework": "^11.0",
        "mockery/mockery": "^1.6",
        "nunomaduro/laravel-console-menu": "^3.5",
        "phpunit/phpunit": "^11.1",
        "symfony/yaml": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": [
        "builds/ploi"
    ]
}
